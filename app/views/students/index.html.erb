<div class="m-3">
<p><%= notice %></p>

<div class="m-3"><h1>Students</h1>
<%= link_to 'New Student',new_student_path,{:class => 'btn btn-dark m-3' } %>
<%= link_to 'See Blogs', blogs_path,{:class => 'btn btn-dark'} %>
<table class="table table-hover table-dark">
    <thead>
        <tr>
        <th scope="col">ID</th>
        <th scope="col">First Name</th>
        <th scope="col">Last Name</th>
        <th scope="col">Email</th>
        <th scope="col" colspan="3">Actions</th>

        </tr>
    </thead>
    <tbody>
        <% @students.each do|student| %>
            <tr>
            <td><%=student.id%></td>
            <td><%=student.first_name%></td>
            <td><%=student.last_name%></td>
            <td><%=student.email%></td>
            <td><%= link_to 'View', student, {:class => 'btn btn-light'}%></td></button>
            <td><%= link_to 'Edit', edit_student_path(student), {:class => 'btn btn-light'} %></td>
            <td><%= link_to "Delete", student, :class => 'btn btn-light', data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'}%></td>
            </tr>
        <% end %>
    </tbody>
</table>
</div>
</div>