<%= form_with(model: blog, data: { turbo: false }) do |form| %>
    <% if @blog.errors.any? %>
       <h2><%= pluralize(@blog.errors.size, 'error') %> prevented this blog from being saved:</h2>
       <ul>
       <% @blog.errors.full_messages.each do |msg| %>
           <li><%= msg %></li>
       <% end %>
       </ul>
<% end %>

<div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
</div>
<div>
    <%= form.label :content %><br>
    <%= form.text_field :content %>
</div>

<div>
    <%= form.label :student_id, style: "display: block" %>
    <%= form.number_field :student_id %>
  </div>

<div>
<%= form.submit ({:class => 'btn btn-dark'})%>
</div>
<% end %>