<div class="m-3">
<p><%= notice %></p>
<h1>Blogs</h1>
<%= link_to 'New Blog',new_blog_path, {:class => 'btn btn-dark m-3'}%>
<%= link_to 'Back to Students',students_path, {:class => 'btn btn-dark'} %>
<table class="table table-hover table-dark">
    <thead>
        <tr>
        <th>Student ID:</th>
        <th>Title</th>
        <th>Content</th>
        <th colspan="3">Actions</th>

        </tr>
    </thead>
    <tbody>
        <% @blogs.each do|blog| %>
            <tr>
            <td><%=blog.student_id %></td>
            <td><%=blog.title %></td>
            <td><%=blog.content %></td>
            <td><%= link_to 'View', blog, {:class => 'btn btn-light'} %></td>
            <td><%= link_to 'Edit', edit_blog_path(blog), {:class => 'btn btn-light'} %></td>
            <td><%= link_to "Delete", blog, :class => 'btn btn-light', data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %></td>
            </tr>
        <% end %>
    </tbody>
</table>
</div>